
    @model List<EZCourse.Controllers.TestController.User>;
    
    @{
        //Layout = "_TestLayout";
        ViewData["Title"] = "Title of Test - Index";
        //var users = ViewBag.Users as List<EZCourse.Controllers.TestController.User>;
        var states = ViewData["States"] as List<EZCourse.Controllers.TestController.State>;
        var countHtml = $"<h2>{Model.Count} users</h2>";
    }

    <h1>Hi There, How are you doing, Am the Test - index </h1>
    @countHtml <!--this will render the variable as raw html code, this is good when considering security to prevent script injection-->
    @Html.Raw(countHtml)  <!--this would show the raw html code-->

    <!--Using data from Controller-->
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        <!--  foreach (var user in users) this is for ViewBag which is commented above-->
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Id @(user.Id == 2 ? "*" : "")
                </td>
                <td>
                    @user.Name
                </td>
            </tr>
        }

        <br />
        <h5>
            @if (states != null)
            {
                <text>This are states of the Names below</text>
            }
        </h5>
        <ul class="list-group">
            @foreach (var state in states)
            {
                <li class="list-group-item">
                    @state.StateOrigin
                </li>
            }
        </ul>
    </table>


